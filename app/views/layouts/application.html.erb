<!DOCTYPE html>
<html>
  <head>
    <title>WildcatPerformanceTrackerRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <% if user_signed_in? %>
        <%= link_to "Students", students_path %>
        <%= form_tag(destroy_user_session_path, method: :delete, style: 'display:inline-block;') do %>
          <% submit_tag "Sign Out" %>
        <% end %>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path %>
        <%= link_to "Sign In", user_session_path %>
      <% end %>
    </nav>
  <!-- Ensures that messages Devise generates, actually show up in HTML responses. Inserted into after adding Devise configuration -->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
